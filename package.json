{
  "name": "md-editor",
  "description": "A Vue.js project",
  "version": "1.0.0",
  "author": "Kazuhiro Kubota <k2.wanko@gmail.com>",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack-dev-server --config webpack.config.client.js --hot",
    "dev:build": "cross-env NODE_ENV=development webpack --progress --hide-modules",
    "clean": "rimraf functions/dist",
    "build": "run-p build:*",
    "build:app": "cross-env NODE_ENV=production webpack --progress --hide-modules",
    "build:firebase-bolt": "firebase-bolt database.rules.bolt",
    "watch": "cross-env NODE_ENV=development webpack --watch --progress --hide-modules",
    "serve": "firebase serve --only hosting,functions",
    "deploy": "run-s clean build deploy:**",
    "deploy:firebase": "firebase deploy"
  },
  "dependencies": {
    "firebase": "^4.6.0",
    "marked": "^0.3.6",
    "vue": "^2.5.2",
    "vue-router": "^2.8.1",
    "vuex": "^2.5.0",
    "vuex-router-sync": "^4.3.2",
    "vuexfire": "^2.1.3"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^6.0.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-2": "^6.24.1",
    "cross-env": "^3.0.0",
    "css-loader": "^0.25.0",
    "extract-text-webpack-plugin": "^2.1.2",
    "file-loader": "^0.9.0",
    "firebase-bolt": "^0.8.2",
    "firebase-tools": "^3.14.0",
    "html-webpack-plugin": "^2.30.1",
    "npm-run-all": "^4.1.1",
    "rimraf": "^2.6.2",
    "vue-loader": "^12.2.2",
    "vue-server-renderer": "^2.5.2",
    "vue-style-loader": "^3.0.3",
    "vue-template-compiler": "^2.5.2",
    "webpack": "^2.7.0",
    "webpack-dev-server": "^2.9.3",
    "webpack-merge": "^4.1.0"
  }
}
